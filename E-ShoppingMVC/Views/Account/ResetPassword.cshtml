@using E_ShoppingMVC.Models.Account
@model ResetPasswordViewModel
@{
	ViewData["title"] = "Đặt lại mật khẩu.";
}
<h1>@ViewData["title"]</h1>
<form asp-action="ResetPassword" asp-controller="Account" method="post" class="form-horizontal" role="form">
	<h4>Đặt lại mật khẩu của bạn</h4>
	<hr />
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="@Model.Code"/>
	<div class="form-group">
		<label class="col-md-2 control-label" asp-for="Email"></label>
		<div class="col-md-10">
			<input asp-for="Email" class="form-control"/>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-2 control-label" asp-for="Password"></label>
		<div class="col-md-10">
			<input asp-for="Password" class="form-control" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-2 control-label" asp-for="ConfirmPassword"></label>
		<div class="col-md-10">
			<input asp-for="ConfirmPassword" class="form-control" />
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset02 col-md-10">
			<button type="submit" class="btn btn-success">Đặt lại</button>
		</div>
	</div>
</form>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
