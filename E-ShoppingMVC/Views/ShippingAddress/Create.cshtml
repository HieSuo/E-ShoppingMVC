@model ShipAddressModel
@using System.Globalization
@{
    ViewData["title"] = "Địa chỉ giao hàng của bạn";

}
<div class="container">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["SuccessMessage"]</div>
    }
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Shipping Address</h4>
                        <div class="breadcrumb__links">
                            <a href="./index.html">Home</a>
                            <a href="./shop.html">Account</a>
                            <span>Shipping Address</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                <form asp-action="Create" asp-controller="ShippingAddress" method="post">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <h6 class="checkout__title">Thêm địa chỉ giao hàng</h6>
                            <div class="checkout__input">
                                <p>Tỉnh/Thành phố<span>*</span></p>
                                <input asp-for="Province">
                            </div>
                            <div class="checkout__input">
                                <p>Quận/Huyện<span>*</span></p>
                                <input asp-for="District">
                            </div>
                            <div class="checkout__input">
                                <p>Xã/Phường/Thị trấn<span>*</span></p>
                                <input asp-for="Ward">
                            </div>
                            <div class="checkout__input">
                                <p>Địa chỉ chi tiết<span>*</span></p>
                                <input asp-for="AddressDetail" placeholder="Street Address" class="checkout__input__add">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="site-btn">Thêm địa chỉ</button>
                </form>
            </div>
        </div>
    </section>
    <!-- Checkout Section End -->

</div>
@section Scripts {
   
}