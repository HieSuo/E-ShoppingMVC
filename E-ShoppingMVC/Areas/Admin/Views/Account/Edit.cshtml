@using E_ShoppingMVC.Areas.Admin.Models.ViewModels
@model EditUserViewModel
@{
    ViewData["title"] = "Cập nhật tài khoản người dùng";
}
<div class="col-sm-12 col-xs-12 content pt-3 pl-0">
    <h5 class="mb-0"><strong>@ViewData["title"]</strong></h5>
    <span class="text-secondary">User Manager <i class="fa fa-angle-right"></i> Attribute's Products <i class="fa fa-angle-right"></i> Create</span>
    <form class="mt-2" asp-controller="Account" asp-action="Edit">
        <input asp-for="@Model.UserModel.Id" type="hidden"/>
        <div class="form-group row">
            <label class="control-label col-sm-2">Username</label>
            <div class="col-sm-6">
                <input asp-for="@Model.UserModel.UserName" class="form-control" />
                <span asp-validation-for="@Model.UserModel.UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2">FirstName</label>
            <div class="col-sm-6">
                <input asp-for="@Model.UserModel.FirstName" class="form-control" />
                <span asp-validation-for="@Model.UserModel.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2">LastName</label>
            <div class="col-sm-6">
                <input asp-for="@Model.UserModel.LastName" class="form-control" />
                <span asp-validation-for="@Model.UserModel.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2">Email</label>
            <div class="col-sm-6">
                <input asp-for="@Model.UserModel.Email" class="form-control" />
                <span asp-validation-for="@Model.UserModel.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2">Email</label>
            <div class="col-sm-6">
                <input asp-for="@Model.UserModel.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.UserModel.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2">Role</label>
            <div class="col-sm-6">

                @{
                    int i = 0;
                }
                @foreach (var item in Model.SelectedRoles)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="@Model.SelectedRoles[@i].RoleName" value="@item.RoleName" />
                        <input type="hidden" asp-for="@Model.SelectedRoles[@i].RoleId" value="@item.RoleId" />
                        <input asp-for="@Model.SelectedRoles[@i].IsSelected" class="form-check-input" type="checkbox" onclick="$(this).val(this.checked ? true : false)" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            @item.RoleName
                        </label>
                    </div>

                    i++;
                }

            </div>
        </div>

        <div class="d-flex justify-content-end">
            <a asp-action="Index" asp-controller="Account" class="mr-1">
                <button type="button" class="btn btn-secondary btn-round">Cancel</button>
            </a>
            <button type="submit" class="btn btn-success btn-round">Update</button>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}