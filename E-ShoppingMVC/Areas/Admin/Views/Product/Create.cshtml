@model ProductModel
@{
    ViewData["title"] = "Create new product";
}

<div class="col-sm-12 col-xs-12 content pt-3 pl-0">
    <h5 class="mb-0"><strong>@ViewData["title"]</strong></h5>
    <span class="text-secondary">Prodcuts Manager <i class="fa fa-angle-right"></i> Products <i class="fa fa-angle-right"></i> Create</span>
    <form class="mt-2" asp-controller="Product" asp-action="Create" enctype="multipart/form-data">

        <div class="form-group row">
            <label class="control-label col-sm-2">Product's Name</label>
            <div class="col-sm-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2">Product's Category</label>
            <div class="row col-sm-8 d-flex justify-content-between">
                <div class="col-sm-6">
                    <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                        <option value="">Choose ...</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="col-sm-2">
                    <a class="btn btn-success" asp-controller="Category" asp-action="Create">Add Category</a>
                </div>

            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2">Desciption</label>
            <div class="col-sm-8">
                <textarea asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2">Product's Name</label>
            <div class="col-sm-8">
                <input asp-for="ImageUpload" class="form-control" id="wizard-picture" />
                <img src="~/assets/img/default-avatar.jpg" class="picture-src" id="wizardPicturePreview" title="" />
                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <a asp-action="Index" asp-controller="Category" class="mr-1">
                <button type="button" class="btn btn-secondary btn-round">Cancel</button>
            </a>
            <button type="submit" class="btn btn-success btn-round">Create</button>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("#ImageUpload").change(function () {
            readURL(this)
        })
    </script>
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('Description');
    </script>
}